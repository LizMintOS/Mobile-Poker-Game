rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /games/{gameId} {
      allow read, create: if request.auth != null;

      allow delete: if request.auth != null && resource.data.creatorId == request.auth.uid;

      allow update: if request.auth != null && (
        resource.data.creatorId == request.auth.uid ||
        exists(/databases/$(database)/documents/games/$(gameId)/players/$(request.auth.uid))
      );

      match /players/{playerId} {
        allow read, write: if request.auth != null && playerId == request.auth.uid;

        allow delete: if request.auth != null && resource.data.gameCreatorId == request.auth.uid;
      }
    }
  }
}